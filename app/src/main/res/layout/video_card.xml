<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6.0dip"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="135.0dip"
            android:layout_height="90.0dip">

            <ImageView
                android:id="@+id/video_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/engineer" />

            <TextView
                android:id="@+id/video_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/black_transparent"
                android:padding="5.0dip"
                android:text="7:00"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:padding="3.0dip"
                android:text="this video shows you the life of an engineer"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video_source"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.4"
                android:padding="3.0dip"
                android:text="Ayoub" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>